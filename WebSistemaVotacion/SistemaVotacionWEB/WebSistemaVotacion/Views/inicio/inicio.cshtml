@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicia Sesión</title>
    <link href="~/Assets/Lib/bootstrap5/bootstrap.css" rel="stylesheet" />
    <style>
        .half .bg {
            background-size: cover;
            background-position: center;
        }

        .half .contents, .half .bg {
            width: 50%;
        }
    </style>
</head>
<body>

    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2" style="background-image:url(https://preview.colorlib.com/theme/bootstrap/login-form-06/images/xbg_1.jpg.pagespeed.ic.nj5iPvtRed.webp)"></div>
        <div class="contents order-2 order-md-1 mt-lg-5">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7 mt-5">
                        <div class="mb-4 mt-5">
                            <h3>¡Te damos la bienvenida!</h3>
                            <p class="mb-4">Escribe tus datos para entrar al sistema de votación</p>
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputEmail1" class="form-label">Correo electrónico</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        </div>
                        <div class="form-group last mb-3">
                            <label for="password">Contraseña</label>
                            <input type="password" class="form-control" id="password">
                        </div>
                        <div class="d-flex mb-5 align-items-right">
                            <span class="ml-auto"><a href="#" class="forgot-pass">¿Olvidaste tu contraseña?</a></span>
                        </div>
                        <input type="submit" value="Ingresar" class="btn btn-block btn-primary">

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Assets/Lib/bootstrap5/bootstrap.bundle.js"></script>
</body>
</html>